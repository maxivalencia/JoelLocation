{{ form_start(form) }}
<div class="row">
	<div class="form-group col-md-6">
		<label for="">Marque :</label>
		{{ form_widget(form.marque) }}
	</div>

	<div class="form-group col-md-6">
		<label for="">Modele :</label>
		{{ form_widget(form.modele) }}
	</div>
	<div class="form-group col-md-6">
		<label for="">Date mise en service :</label>
		{{ form_widget(form.date_mise_service) }}
	</div>
	<div class="form-group col-md-6">
		<label for="">Date mise en location :</label>
		{{ form_widget(form.date_mise_location) }}

	</div>

	{# <div class="form-group col-md-6">
				<label for="">Modèle :</label>
				<select name="select" id="selectModele" class="form-control"></select>
			</div> #}

	<div class="form-group col-md-6">
		<label for="">Détails :</label>
		{{ form_widget(form.details) }}

	</div>
	<div class="form-group col-md-3">
		<label for="">Carburation :</label>
		{{ form_widget(form.carburation) }}

	</div>
	<div class="form-group col-md-3">
		<label for="">Caution:</label>
		{{ form_widget(form.caution) }}
	</div>
	<div class="form-group col-md-3">
		<label for="">Vitesse :</label>
		{{ form_widget(form.vitesse) }}

	</div>
	<div class="form-group col-md-3">
		<label for="">Bagages :</label>
		{{ form_widget(form.bagages) }}

	</div>
	<div class="form-group col-md-3">
		<label for="">Portes :</label>
		{{ form_widget(form.portes) }}

	</div>
	<div class="form-group col-md-3">
		<label for="">Passagers :</label>
		{{ form_widget(form.passagers) }}

	</div>
	<div class="form-group col-md-6">
		<label for="">Atouts :</label>
		{{ form_widget(form.atouts) }}

	</div>
	<div class="form-group col-md-3">
		<label for="">Immatriculation :</label>
		{{ form_widget(form.immatriculation) }}

	</div>
	<div class="form-group col-md-3">
		<label for="">Prix acquisition :</label>
		{{ form_widget(form.prix_acquisition) }}

	</div>

	<div class="form-group col-md-6">
		<div class="row">
			<div class="col-auto">
				<label for="">Image :</label>
				{{ form_widget(form.imageFile) }}
			</div>
			{% if modifier %}
				<div class="col-auto">
					<div class="image text-center">
						<img src="{{vich_uploader_asset(vehicule, 'imageFile') }}" alt="{{ vehicule.immatriculation }}" style="width : 120px; height : 100px;">
					</div>
				</div>
			{% endif %}
		</div>
	</div>
</div>
<div class="">
	<button class="btn btn-danger" id="enregistrer">
		<i class="fa fa-book" aria-hidden="true"></i>
		{{ button_label|default('Enregistrer') }}
	</button>
</div>
{{ form_end(form) }}
